{
    "name": "astral",
    "version": "1.0.0",
    "description": "calculations for the position of the sun and the moon",
    "main": "dist/index.js",
    "scripts": {
        "clean": "rimraf dist",
        "build": "rimraf dist && mkdir dist && cp src/astral/*.ts ./dist/",
        "test": "mocha --require ts-node/register ./src/test/**/*.ts",
        "test-watch": "mocha --require ts-node/register --watch --watch-files ./src/**/*.ts",
        "make-docs": "typedoc --media ./src/media --out doc ./src/astral/"
    },
    "keywords": [
        "sun",
        "moon",
        "sunrise",
        "sunset",
        "dawn",
        "dusk",
        "noon",
        "midnight",
        "rahukalaam"
    ],
    "author": "Simon Kennedy <sffjunkie+code@gmail.com>",
    "license": "Apache-2.0",
    "repository": {
      "type": "git",
      "url": "https://github.com/sffjunkie/astral-ts.git"
    },
    "dependencies": {
        "luxon": "^1.22.0"
    },
    "devDependencies": {
        "@types/assert": "^1.4.6",
        "@types/chai": "^4.2.9",
        "@types/luxon": "^1.21.0",
        "@types/mocha": "^7.0.1",
        "@types/node": "^13.7.6",
        "chai": "^4.2.0",
        "chai-datetime": "^1.5.0",
        "mocha": "^7.1.0",
        "mocha-typescript": "^1.1.17",
        "nyc": "^15.0.0",
        "rewire": "^4.0.1",
        "rimraf": "^3.0.2",
        "ts-node": "^8.6.2",
        "typedoc": "^0.16.10",
        "typescript": "^3.8.2",
        "npm-pack": "^1.0.0"
    },
    "mocha": {
        "no-opts": true,
        "extension": "ts",
        "color": true
    }
}
